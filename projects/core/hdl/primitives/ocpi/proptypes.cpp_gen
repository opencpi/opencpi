#define WPROP_ARRAY_64(pretty,which,def,rng,lhs,rhs) \
ENTITY_ARRAY_64(pretty,which,def,rng) \
$architecture rtl of pretty##_array_property is\
$@@signal base : natural;\
begin\
$@@base <= to_integer(offset(offset~left downto 3));\
$@@reg: process(Clk) is\
$@@begin\
