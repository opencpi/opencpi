$@@@@@@@@else\
$@@@@@@@@@@if its(is_big_endian) then\
$@@@@@@@@@@@@value(base)(63 downto 32) <= rhs(data);\
$@@@@@@@@@@else\
$@@@@@@@@@@@@value(base)(31 downto 0) <= rhs(data);\
$@@@@@@@@@@end if;\
$@@@@@@@@end if;\
$@@@@@@@@any_written <= btrue;\
