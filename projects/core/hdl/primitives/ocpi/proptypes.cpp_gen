$@@@@@@@@if nbytes_1 > 1 and property.nitems > 1 then\
$@@@@@@@@@@if its(is_big_endian) then\
$@@@@@@@@@@@@value(base+1) <= rhs(data(15 downto 0));\
$@@@@@@@@@@else\
